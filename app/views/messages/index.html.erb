<div class="panel panel-primary">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <ul class="list-group">
    <% @messages.each do |message| %>
      <li class="list-group-item">
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
      </li>
    <% end %>
  </ul>
</div>

<%= form_for(@message,html:{class:"form-horizontal"} ) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label for="inputName" class="col-sm-1 control-label">名前:</label>
    <div class="col-sm-11">
      <%= f.text_field :name ,class:"form-control" ,id:"inputName" ,placeholder:"名前"%>
    </div>
  </div>
  <div class="form-group">
    <label for="inputBody" class="col-sm-1 control-label">内容:</label>
    <div class="col-sm-11">
      <%= f.text_area :body ,class:"form-control" ,id:"inputBody" ,placeholder:"メッセージ"%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-11 col-sm-offset-1">
      <%= f.submit class:"btn btn-primary" %>
    </div>
  </div>
<% end %>