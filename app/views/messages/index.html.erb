<div class="panel panel-primary">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <ul class="list-group">
    <% @messages.each do |message| %>
      <li class="list-group-item">
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
      </li>
    <% end %>
  </ul>
</div>

